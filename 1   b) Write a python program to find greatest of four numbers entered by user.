# Program to find the greatest of four numbers
def find_greatest(a, b, c, d):
 return max(a, b, c, d)
# Input from user
print("Enter four numbers:")
num1 = float(input("Number 1: "))
num2 = float(input("Number 2: "))
num3 = float(input("Number 3: "))
num4 = float(input("Number 4: "))
# Find and display the greatest number
greatest = find_greatest(num1, num2, num3, num4)
print(f"The greatest of the four numbers is: {greatest}") 
