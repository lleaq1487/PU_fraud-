def find_max_index(arr):
 max_val = arr[0]
 max_index = 0
+
 for i in range(len(arr)):
 if arr[i] > max_val:
 max_val = arr[i]
 max_index = i
 return max_index, max_val
arr = [3, 5, 1, 8, 2]
max_index, maximum = find_max_index(arr)
print("Index of Maximum value:", max_index)
print("Maximum value:", maximum) 
